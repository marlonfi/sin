<% provide(:title, 'Listado de Archivos Importados') %>
<% provide(:content_header_path,  imports_path) %>
<% provide(:content_header_data1,
          "<i class='fa fa-save'></i> Archivos Importados".html_safe) %>
<% content_for :js_per_page do %>
  <%= javascript_include_tag "datatables_imports" %>
<% end %>
<% content_for :css_per_page do %>
  <%= stylesheet_link_tag "datatables", media: "all"%>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        Listado de archivos importados
      </header>
      <div class="panel-body">
        <div class="adv-table">
          <table  class="display table table-bordered table-striped" id="imports"
                  data-source="<%= imports_path(format: "json") %>">
            <thead>
              <tr>
                <th><i class="fa fa-bullhorn"></i> STATUS</th>
                <th><i class=" fa fa-check-circle"></i> CLASE </th>
                <th><i class=" fa fa-clock-o"></i> TXT-Fecha </th>
                <th><i class=" fa fa-archive"></i> FORMATO </th>
                <th><i class=" fa fa-calendar"></i> FECHA DE IMPORT. </th>
                <th><i class=" fa fa-folder-open-o"></i> ARCHIVO </th>  
                <th><i class=" fa fa-sort-amount-desc"></i> DESCRIP. </th>
              </tr>
            </thead>
            <tbody>                  
            </tbody>
            <tfoot>
              <tr>
                <th><i class="fa fa-bullhorn"></i> STATUS</th>
                <th><i class=" fa fa-check-circle"></i> CLASE </th>
                <th><i class=" fa fa-clock-o"></i> TXT-Fecha </th>
                <th><i class=" fa fa-archive"></i> FORMATO </th>
                <th><i class=" fa fa-calendar"></i> FECHA DE IMPORT. </th>
                <th><i class=" fa fa-folder-open-o"></i> ARCHIVO </th>  
                <th><i class=" fa fa-sort-amount-desc"></i> DESCRIP. </th>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>    
    </section>
  </div>
</div>