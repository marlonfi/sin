<% provide(:title, 'Usuarios del sistema') %>
<% provide(:content_header_path,  users_path) %>
<% provide(:content_header_data1,
          "<i class='fa fa-user'></i> Usuarios del sistema".html_safe) %>

<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        Listado de usuarios
      </header>
      <div class="panel-body">
        <table class="table table-striped table-advance table-hover">
          <thead>
            <tr>
              <th><i class="fa fa-bullhorn"></i> DNI</th>
              <th><i class="fa fa-user"></i> Ap. y Nomb.</th>
              <th class="hidden-phone"><i class="fa fa-user"></i> Cargo</th>
              <th><i class="fa fa-phone-square"></i> Últ. ingreso </th>
              <th>¿SuperAdmin?</th>
              <th>¿Admin?</th>
              <th>¿Organizac.?</th>
              <th>¿Importar?</th>
              <th>¿Reader?</th>
              <th>Estado</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render @users %>
          </tbody>
        </table>
      </div>
      <header class="panel-heading" style= 'text-align: center'>
        <%= will_paginate @users, class:'apple_pagination',:previous_label => 'Anterior', :next_label => 'Siguiente' %>
      </header>
      <header class="panel-heading" style= 'text-align: center'>
        <%= link_to new_user_path, :class => 'btn btn-success' do %>
          <i class="fa fa-user"> </i> Nuevo usuario
        <% end %>
      </header>
    </section>
  </div>
</div>
