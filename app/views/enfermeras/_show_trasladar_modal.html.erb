<div class="modal fade" id="trasladar_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"><i class='fa fa-check-circle-o'></i> Trasladar </h4>
            </div>
            <div class="modal-bodyActualizarData">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Atención! Se procedera a trasladar a la enfermera <%=@enfermera.full_name%>. 
                        </header>
                        <div class="panel-body">
                            <%= form_tag enfermera_trasladar_path(@enfermera.id)  do %>
                                <div class="form-group">
                                    <label for="archivo">Ente actual: </label>
                                    <%= @enfermera.ente.cod_essalud%>
                                </div>
                                <div class="form-group">                                    
                                    <label for="archivo">Ahora trabaja en: </label>
                                    <%= collection_select(:ente, :cod_essalud, Ente.order(:cod_essalud),
                             :cod_essalud, :cod_essalud, {:prompt => 'Seleccione'}, {class: "form-control", id: 'voucher'})  %>
                                </div>
                                <div class="form-group">
                                    <label for="file">Descripción (MAX 250)</label>
                                    <%=text_area_tag 'descripcion', nil, rows: 5, class: 'form-control'%>
                                </div>                  
                                <center><%= submit_tag "Registrar", class: 'btn btn-primary' %></center>
                            <% end %> 
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>