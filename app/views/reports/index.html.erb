<div class="row">
  <div class="col-lg-12">
    <section class="panel">
    	<div class="panel-body">
<%= link_to "Enviar emails", reports_send_payments_reports_path, class: "btn btn-danger", :method=> :post %></br></div>
 </section>
  </div>
</div>

<% content_for :js_per_page do %>
  
  <%= javascript_include_tag "chosen"%>
<% end %>
<% content_for :css_per_page do %>
  <%= stylesheet_link_tag "chosen", media: "all" %>
<% end %>
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        Generar PDF
      </header>
        <div class="panel-body">
        	<%= form_tag (reports_pdf_path + '.pdf') ,
	           {:method => "get", :class => 'form-inline', target: '_blank'} do %>

						<div class="form-group">
					    <%= collection_select(:base, :codigo_base, @bases,
					         :codigo_base, :codigo_base, {:prompt => 'Pago libre'}, {class: "form-control"})  %>
					  </div>          
						<div class="form-group">
						    <%= select_year Date.today,{ :start_year => 2013, :end_year => 2030},
						                               {class: "form-control", style:'width:150px'} %>
						</div>           
						<div class="form-group">
						    <%= select_month Date.today,{ use_month_names: meses_espanol},{class: "form-control", style:'width:200px'} %>
						</div>
						<%= button_tag( :name => nil, class:"btn btn-info", id: 'btnGetAjax') do %>
						          <i class="fa fa-search"></i> Procesar
						<% end %>
						<div class="form-group" id='loading'>              
						</div>
					<% end %> 

        </div>      
    </section>
  </div>
</div>



